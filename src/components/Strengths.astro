<style lang='scss'>
  .strengths {
    background: linear-gradient(to bottom, #141e36, #030510);
    position: relative;
    padding: 15rem 12%;
    display: flex;
    flex-direction: column;
    gap: 5rem;
    padding-bottom: 30vw;
    &::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100vw;
      aspect-ratio: 1800 / 423;
      background: url("/images/strengthsFooter.svg");
      background-size: cover;
      background-repeat: no-repeat;
      z-index: 200;
    }
    h2 {
      color: rgba(255, 255, 255, 0.4);
      font-weight: bold;
      font-size: 6rem;
      line-height: 0.9;
      max-width: 60vw;
      position: relative;
      text-align: end;
      align-self: end;
      right: -16%;
    }
    .services {
      display: flex;
      flex-direction: column;
      position: relative;
      gap: 10rem;
      padding-top: 5rem;
      .service {
        z-index: 2;
        max-width: 40rem;
        color: white;
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        text-shadow:
          0px 0px 2em #000000,
          0px 0px 0.2em #000000;
        &:nth-of-type(2) {
          align-self: flex-end;
        }
        p {
          line-height: 3rem;
        }
      }
    }
  }

  @media screen and (max-width: 600px) {
    .strengths {
      gap: 5rem;
      padding: 0 1rem;
      h2 {
        font-size: 3rem;
        margin-top: 5rem;
        right: -1rem;
      }
      .services {
        padding-top: 0;
        padding-bottom: 10rem;
        gap: 10rem;
        .service {
          gap: 1rem;
          p {
            font-size: 1rem;
            line-height: 2em;
          }
          &:nth-of-type(2) {
            h3,
            p {
              text-align: end;
            }
          }
        }
      }
    }
  }
</style>
