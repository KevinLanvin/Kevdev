---
import Logo from "./Logo.astro";
---

<header>
  <a id='logo' href='/'>
    <Logo />
  </a>
  <nav>
    <a href='/services'>Développement full stack</a>
    <a href='/services'>Création de sites web</a>
    <a href='/portfolio'>Réalisations</a>
    <a href='/qui-je-suis'>Qui je suis</a>
  </nav>
  <button class='contactButton'
    >Contact
    <span class='border'></span>
    <span class='border'></span>
    <span class='border'></span>
  </button>
</header>

<style lang='scss'>
  header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2em 0;
  }
  #logo {
    margin-right: auto;
    position: relative;
    &::before {
      content: "";
      display: block;
      position: absolute;
      background: rgb(0, 0, 0);
      z-index: -1;
      filter: blur(100px);
      border-radius: 50%;
      width: 800%;
      height: 600%;
      bottom: -150%;
      right: -150%;
    }
  }
  nav {
    display: flex;
    align-items: center;
    gap: 4em;
    padding: 1em 3em;
    position: relative;
    overflow: hidden;
    background: linear-gradient(
      204.1deg,
      rgba(255, 255, 255, 0.3) 0%,
      rgba(0, 0, 0, 0.46) 100%
    );
    border-radius: 4em;
    backdrop-filter: blur(40px);
    &::before {
      content: "";
      position: absolute;
      z-index: -1;
      inset: 0;
      padding: 2px;
      border-radius: 4em;
      background: linear-gradient(45deg, #fff 15%, transparent 108%);
      -webkit-mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
    }
    a {
      color: white;
      text-decoration: none;
      padding: 1em;
    }
  }
  .contactButton {
    margin-left: auto;
    border: none;
    background: transparent;
    color: white;
    font-size: 1.25em;
    font-weight: bold;
    position: relative;
    padding: 1em 2em;
    cursor: pointer;
    &::before {
      content: "";
      display: block;
      position: absolute;
      background: rgb(0, 0, 0);
      z-index: -1;
      filter: blur(100px);
      border-radius: 50%;
      width: 50vw;
      height: 500%;
      bottom: -150%;
      right: 50%;
      transform: translateX(50%);
    }
    .border {
      position: absolute;
      border: 1px solid white;
      border-radius: 4em;
      width: 100%;
      height: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-5deg);
      &:first-of-type {
        transform: translate(calc(-50% - 7px), calc(-50% - 7px)) rotate(-5deg);
      }
      &:last-of-type {
        transform: translate(calc(-50% + 7px), calc(-50% + 7px)) rotate(-5deg);
      }
    }
  }
</style>
