<style lang='scss'>
  header {
    position: fixed;
    display: flex;
    width: 100vw;
    justify-content: center;
    align-items: center;
    padding: 2em 12%;
    backdrop-filter: blur(5px); 
    background: linear-gradient(191.71deg, rgba(0, 0, 0, 0.63) 1.22%, rgba(0, 0, 0, 0.07) 92.57%);
    z-index: 500;
  }
  #logo {
    margin-right: auto;
    position: relative;
  }
  nav {
    display: flex;
    align-items: center;
    gap: 2em;
    padding: 1em 3em;
    position: relative;
    overflow: hidden;
    font-size: 1.25rem;
    .intro {
      font-style: italic;
      color: white;
      font-weight: 300;
    }
    a {
      color: white;
      text-decoration: none;
      padding: 1em;
    }
  }
  .contactButton {
    margin-left: auto;
    border: none;
    background: transparent;
    color: white;
    font-size: 1.25em;
    font-weight: bold;
    position: relative;
    padding: 1em;
    cursor: pointer;
    .border {
      position: absolute;
      border: 1px solid white;
      border-radius: 4em;
      width: 100%;
      height: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-5deg);
      &:first-of-type {
        transform: translate(calc(-50% - 7px), calc(-50% - 7px)) rotate(-5deg);
      }
      &:last-of-type {
        transform: translate(calc(-50% + 7px), calc(-50% + 7px)) rotate(-5deg);
      }
    }
  }
</style>
