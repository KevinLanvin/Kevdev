---
import BorderedButton from "./BorderedButton.astro";

const { className, clientName, projectDescription, link, linkLabel } = Astro.props;
---

<div class=`projectCard ${className}`>
  <slot />
  <div class="description">
    <h2>{clientName}</h2>
    <p>{projectDescription}</p>
    {link && <BorderedButton>{linkLabel}</BorderedButton>}
  </div>
</div>

<style lang='scss'>
  .projectCard {
    display: grid;
    grid-template-rows: 1fr 15rem;
    gap: 2rem;
    :global(img) {
      object-fit: contain;
      object-position: left bottom;
      width: 100%;
      height: 100%;
    }
  }
  .description {
    position: relative;
    color: white;
    left: 20%;
    width: 80%;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 1rem;
    &::before {
      content: "";
      position: absolute;
      width: 10%;
      height: 100%;
      right: 105%;
      background: url("/images/projectDescriptionArrow.svg");
      background-size: contain;
      background-repeat: no-repeat;
      background-position-x: right;
    }
  }

  @media screen and (max-width: 600px) {
    .projectCard {
      gap: 1rem;
    }
    .description {
      left: 0;
      &::before {
        display: none;
      }
      h2 {
        font-size: 1.25rem;
      }
    }
  }
</style>
