---
const { addedClasses, color = "white" } = Astro.props;
---

<button class=`borderedButton ${addedClasses}`>
  <slot />
  <span class='border' style=`--color: ${color}`></span><span
    class='border'
    style=`--color: ${color}`></span><span
    class='border'
    style=`--color: ${color}`></span>
</button>

<style lang='scss'>
  .borderedButton {
    font-size: 1.25rem;
    font-weight: bold;
    color: white;
    z-index: 2;
    cursor: pointer;
    padding: 1em 2em;
    position: relative;
    .border {
      position: absolute;
      border: 1px solid var(--color);
      border-radius: 4em;
      width: 100%;
      height: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-3deg);
      transition: transform 0.2s ease-in-out;
      &:first-of-type {
        transform: translate(calc(-50% - 7px), calc(-50% - 7px)) rotate(-3deg);
      }
      &:last-of-type {
        transform: translate(calc(-50% + 7px), calc(-50% + 7px)) rotate(-3deg);
      }
    }
  }
  .borderedButton:hover {
    .border:last-of-type,
    .border:first-of-type {
      transform: translate(-50%, -50%) rotate(-3deg);
    }
  }
</style>
