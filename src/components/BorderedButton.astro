---
const { addedClasses = "", link = "" } = Astro.props;
---

<div class=`buttonContainer ${addedClasses}`>
  <div class='square square1'></div>
  <div class='square square2'></div>
  <a class='borderedButton' href={link}>
    <slot />
  </a>
</div>

<style lang='scss'>
  .buttonContainer {
    position: relative;
    container-type: normal;
    &:hover {
      .square1 {
        transform: translateX(calc(100% - 6rem));
      }
      .square2 {
        transform: translateX(calc(-100% + 6rem));
      }
    }
  }
  .square {
    position: absolute;
    width: 100%;
    height: 100%;
    &::before {
      content: "";
      position: absolute;
      border: 16px solid transparent;
      border-bottom: 3px solid white;
      width: 0px;
      height: 0px;
    }
    &::after {
      content: "";
      position: absolute;
      width: 0;
      height: 0;
      border: 16px solid transparent;
      border-top: 3px solid white;
    }
    transform: translateX(0);
    transition: transform 0.2s ease-in-out;
  }
  .square1 {
    &::before {
      bottom: 100%;
      left: 2rem;
    }
    &::after {
      top: 0;
      left: 2rem;
    }
  }
  .square2 {
    &::before {
      bottom: 0;
      right: 2rem;
    }
    &::after {
      top: 100%;
      right: 2rem;
    }
  }
  .borderedButton {
    color: white;
    cursor: pointer;
    background: #ffffff0a;
    border: 1px solid white;
    border-radius: 5rem;
    padding: 1rem 2rem;
    backdrop-filter: blur(5px);
    white-space: nowrap;
    width: max-content;
    font-weight: bold;
    font-size: 1rem;
    display: block;
  }
  @media screen and (max-width: 600px) {
    .borderedButton {
      font-size: 1rem;
    }
  }
</style>
