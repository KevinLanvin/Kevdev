---
import Partners from "./Partners.astro";
---

<section class='heroSiteWeb' id="hero">
  <h1 id="title">
    Des <strong>sites web</strong> pour les <em>grands</em> et les <span
      class='boldIt'>petits projets</span
    >
  </h1>
  <div class="partnersHero">
    <Partners inverted title={ false } />
  </div>
  <div class='fireflies'>
    <div class='fireflyGroup1'>
      <span class='firefly firefly1'></span>
      <span class='firefly firefly2'></span>
    </div>
    <div class='fireflyGroup2'>
      <span class='firefly firefly3'></span>
      <span class='firefly firefly4'></span>
      <span class='firefly firefly5'></span>
    </div>
  </div>
  <div class='fireflyGroup3'>
    <span class='firefly firefly6'></span>
  </div>
</section>

<style lang='scss'>
  .heroSiteWeb {
    background: url("/images/jungle.webp");
    background-size: cover;
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 5rem 12%;
    position: relative;
    .partnersHero {
      position: absolute;
      display: flex;
      z-index: 10;
      width: 100vw;
      bottom: 0;
    }
    .fireflies {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      animation: rotateFireflies 40s linear infinite;
      transform-origin: center center;
    }
    .fireflyGroup1 {
      position: absolute;
      top: 50%;
      left: 10%;
      width: 10rem;
      height: 10rem;
      animation: rotateFireflyGroup1 40s ease-in-out infinite;
    }
    .fireflyGroup2 {
      position: absolute;
      top: 12%;
      left: 50%;
      width: 50rem;
      height: 50rem;
      transform-origin: left bottom;
    }
    .fireflyGroup3 {
      position: absolute;
      top: 0%;
      left: 10rem;
      width: 30rem;
      height: 30rem;
      transform-origin: left top;
      animation: rotateFireflyGroup3 12s linear infinite;
    }
    .firefly {
      position: absolute;
      width: 1rem;
      height: 1rem;
      background: radial-gradient(
        farthest-side,
        #fffffff2 0%,
        #fffffff2 25%,
        #ffffff00 100%
      );
      z-index: 10;
    }
    .firefly1 {
      top: 50%;
      left: 50%;
      width: 2rem;
      height: 2rem;
      animation: firefly1 10s ease-in-out infinite;
    }
    .firefly2 {
      top: 20%;
      left: 20%;
      width: 1rem;
      height: 1rem;
      animation: firefly2 10s ease-in-out infinite;
    }
    .firefly3 {
      top: 10%;
      left: 10%;
      width: 2rem;
      height: 2rem;
      animation: firefly3 30s ease-in-out infinite;
    }
    .firefly4 {
      top: 30%;
      left: 80%;
      width: 1rem;
      height: 1rem;
      animation: firefly4 40s ease-in-out infinite;
    }
    .firefly5 {
      top: 80%;
      right: 30%;
      width: 2rem;
      height: 2rem;
    }
    .firefly6 {
      width: 2rem;
      height: 2rem;
      bottom: 5%;
      left: 5%;
      z-index: 20;
      transform-origin: -5rem -5rem;
      animation: firefly6 12s ease-in-out infinite;
    }
  }
  @keyframes rotateFireflies {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes rotateFireflyGroup1 {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    12% {
      transform: translate(12rem, 0) rotate(360deg);
    }
    25% {
      transform: translate(25rem, 0) rotate(0deg);
    }
    37% {
      transform: translate(12rem, 0) rotate(360deg);
    }
    50% {
      transform: translate(0, 0) rotate(0deg);
    }
    62% {
      transform: translate(12rem, 0) rotate(360deg);
    }
    75% {
      transform: translate(25rem, 0) rotate(0deg);
    }
    88% {
      transform: translate(12rem, 0) rotate(360deg);
    }
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
  }

  @keyframes rotateFireflyGroup3 {
    0% {
      transform: rotate(30deg);
    }
    75% {
      transform: rotate(-120deg);
    }
    100% {
      transform: rotate(-330deg);
    }
  }

  @keyframes firefly1 {
    0% {
      opacity: 0.1;
    }
    25% {
      opacity: 1;
    }
    50% {
      opacity: 1;
    }
    75% {
      opacity: 1;
    }
    100% {
      opacity: 0.1;
    }
  }

  @keyframes firefly2 {
    0% {
      transform: translate(0rem, 0rem);
      opacity: 1;
    }
    25% {
      transform: translate(3rem, 5rem);
      opacity: 0.1;
    }
    50% {
      transform: translate(-1.5rem, -1.5rem);
      opacity: 1;
    }
    100% {
      transform: translate(0rem, 0rem);
      opacity: 1;
    }
  }

  @keyframes firefly3 {
    0% {
      transform: translate(0, 0);
      opacity: 0.1;
    }
    25% {
      transform: translate(-20rem, 10rem);
      opacity: 1;
    }
    50% {
      transform: translate(5rem, -10rem);
    }
    75% {
      transform: translate(-15rem, 10rem);
      opacity: 1;
    }
    100% {
      transform: translate(0, 0);
      opacity: 0.1;
    }
  }

  @keyframes firefly4 {
    0% {
      transform: translate(0, 0);
      opacity: 1;
    }
    12% {
      opacity: 0.1;
    }
    25% {
      transform: translate(-35rem, 20rem);
      opacity: 1;
    }
    50% {
      transform: translate(-35rem, 20rem);
      opacity: 1;
    }
    66% {
      opacity: 0.1;
    }
    75% {
      transform: translate(-35rem, 20rem);
      opacity: 1;
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
    }
  }

  @keyframes firefly5 {
    0% {
      opacity: 1;
    }
    34% {
      opacity: 0.1;
    }
    52% {
      opacity: 1;
    }
    68% {
      opacity: 0.1;
    }
    80% {
      opacity: 1;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes firefly6 {
    0% {
      transform: translate(0, 0);
      opacity: 0.1;
    }
    10% {
      opacity: 1;
    }
    33% {
      transform: translate(0, -20rem);
      opacity: 1;
    }
    40% {
      opacity: 1;
    }
    46% {
      opacity: 0.1;
    }
    52% {
      opacity: 1;
    }
    75% {
      transform: translate(0, 0);
      opacity: 1;
    }
    100% {
      opacity: 0.1;
    }
  }

  @media screen and (max-width: 600px) {
    .heroSiteWeb {
      padding: 2rem 1rem;
      .partners {
        gap: 2rem;
        .partner {
          height: 50px;
        }
      }
    }
  }
</style>
