---
import BorderedButton from "./BorderedButton.astro";
---

<section class='contactSection'>
  <div class='fog'></div>
  <h2 class="animatedScrollContent">
    Prêt à <strong>embarquer</strong> pour votre<br /><em>prochain projet ?</em>
  </h2>
  <BorderedButton
    addedClasses='contactButton animatedScrollContent'
    link='/contact'
  >
    Contactez-moi !
  </BorderedButton>
  <div class='shadow'></div>
</section>

<style lang='scss'>
  .contactSection {
    background: url("/images/ecosse-background.webp");
    background-size: cover;
    position: relative;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5rem;
    align-items: center;
    text-align: center;
    overflow: hidden;
    &::before {
      content: "";
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      background: url("/images/train.webp");
      background-size: cover;
      z-index: 1;
    }
    h2 {
      color: white;
      font-size: 3rem;
      line-height: 4rem;
      font-weight: normal;
      z-index: 2;
      strong {
        font-weight: 100;
        font-style: italic;
      }
      em {
        font-size: 4rem;
        font-weight: bold;
        font-style: normal;
      }
    }
    .shadow {
      width: 200vw;
      height: 100vh;
      z-index: 1;
      position: absolute;
      transform: translateX(-50%);
      background: radial-gradient(
        ellipse at bottom,
        #000000 0%,
        #000000f0 20%,
        #00000070 50%,
        #00000050 60%,
        transparent 100%
      );
      bottom: 0;
      left: 50%;
    }
    .fog {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 50%;
      &::after {
        content: "";
        background-image: url("/images/fog1large.webp");
        background-repeat: repeat-x;
        background-position-y: bottom;
        width: 5000px;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        animation: fog1movement 10s linear infinite reverse;
      }
      &::before {
        content: "";
        background-image: url("/images/fog1large.webp");
        background-repeat: repeat-x;
        background-position-y: bottom;
        width: 5000px;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        animation: fog1movement 20s linear infinite reverse;
      }
    }
  }
  :global(.contactButton) {
    z-index: 2;
  }

  @media screen and (max-width: 600px) {
    .contactSection {
      padding: 0 1rem;
      gap: 2rem;
      background: url("/images/ecosse-background-mobile.webp");
      background-size: cover;
      background-position: center;
      &::before {
        display: none;
      }
      h2 {
        font-size: 2rem;
        line-height: 3rem;
        em {
          font-size: 3rem;
        }
      }
    }
  }
</style>
