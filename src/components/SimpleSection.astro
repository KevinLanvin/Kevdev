---
import BorderedButton from "./BorderedButton.astro";
---

<section class='simpleSection'>
  <div class='sectionContent'>
    <div class='border-container'>
      <div class='borderLeft'></div>
      <div class='borderRight'></div>
      <div class='content'>
        <p>La performance au coeur de l'expérience</p>
        <img
          srcset='/images/muchas-glacias-mobile.svg 600w, /images/muchas-glacias.svg'
          src='/images/muchas-glacias.svg'
          alt='Muchas glacias performances'
        />
        <BorderedButton link='#' addedClasses='centeredButton' newTab
          >Découvrez la note du site</BorderedButton
        >
      </div>
    </div>
  </div>
</section>

<style lang='scss'>
  .simpleSection {
    background-color: #0e0e0e;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
    padding: 10rem calc(12% - 10px);
    box-shadow: 0px -100px 100px 50px #0e0e0e;
    position: relative;
    .sectionContent {
      position: relative;
    }
    .border-container {
      padding: 5px;
      overflow: hidden;
      position: relative;
      z-index: 1;
      border-radius: 5rem;
      .borderLeft {
        position: absolute;
        width: 50%;
        height: 100%;
        left: 0;
        top: 0;
        overflow: hidden;
        &::before {
          content: "";
          background: conic-gradient(
            from -90deg at 50% 50%,
            transparent 0%,
            transparent 24%,
            white 25%,
            transparent 30%,
            transparent
          );
          width: 800%;
          padding-top: 800%;
          position: absolute;
          z-index: -1;
          top: 50%;
          right: 0;
          animation: rotateBorderLeft 2s linear infinite;
          transform: translate(50%, -50%);
        }
      }
      .borderRight {
        position: absolute;
        width: 50%;
        height: 100%;
        left: 50%;
        top: 0%;
        overflow: hidden;
        &::after {
          content: "";
          background: conic-gradient(
            from 90deg at 50% 50%,
            transparent 0%,
            transparent 70%,
            white 75%,
            transparent 76%,
            transparent
          );
          width: 800%;
          padding-top: 800%;
          position: absolute;
          z-index: -1;
          top: 50%;
          left: 0;
          animation: rotateBorderRight 2s linear infinite;
          transform: translate(-50%, -50%);
        }
      }
    }
    .content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 5rem;
      padding: 5rem;
      background-color: #0e0e0e;
      border-radius: 5rem;
      p {
        color: white;
        font-weight: bold;
        font-size: 5rem;
        line-height: 5rem;
        text-align: center;
        position: relative;
      }
      img {
        width: 80%;
      }
    }
  }

  @keyframes rotateBorderRight {
    0% {
      transform: translate(-50%, -50%) rotate(-5deg);
    }
    100% {
      transform: translate(-50%, -50%) rotate(200deg);
    }
  }

  @keyframes rotateBorderLeft {
    0% {
      transform: translate(50%, -50%) rotate(5deg);
    }
    100% {
      transform: translate(50%, -50%) rotate(-200deg);
    }
  }

  @media screen and (max-width: 600px) {
    .simpleSection {
      padding: 5rem 1rem;
      .content {
        padding: 2rem;
        border-radius: 2rem;
        gap: 2rem;
        p {
          font-size: 2.5rem;
          line-height: 2.5rem;
        }
      }
      .border-container {
        border-radius: 2rem;
      }
    }
  }
</style>
