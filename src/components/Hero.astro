<script>
  const hero = document.getElementById("hero");
  const title = document.getElementById("title");
  hero.addEventListener("mousemove", (event) => {
    let xOffset = event.offsetX - title.offsetLeft;
    xOffset = Math.max(0, xOffset);
    xOffset = Math.min(title.offsetWidth, xOffset);
    let yOffset = event.offsetY - title.offsetTop;
    yOffset = Math.max(0, yOffset);
    yOffset = Math.min(title.offsetHeight, yOffset);
    title.style.setProperty("--translateX", `${xOffset}px`);
    title.style.setProperty("--translateY", `${yOffset}px`);
  });
