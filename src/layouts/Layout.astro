---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<script>
  const hero = document.getElementById("hero");
  const title = document.getElementById("title");
  hero.addEventListener("mousemove", (event) => {
    let xOffset = event.clientX - title.offsetLeft;
    xOffset = Math.max(100, xOffset);
    xOffset = Math.min(title.offsetWidth - 100, xOffset);
    title.style.backgroundPositionX = `${xOffset}px`;
  });
</script>

<style is:global>
  @font-face {
    font-family: "Poppins";
    src: url("/fonts/Poppins-Bold.ttf");
    font-weight: bold;
    font-style: normal;
  }

  @font-face {
    font-family: "Poppins";
    src: url("/fonts/Poppins-Black.ttf");
    font-weight: black;
    font-style: normal;
  }

  @font-face {
    font-family: "Poppins";
    src: url("/fonts/Poppins-ExtraLight.ttf");
    font-weight: lighter;
    font-style: normal;
  }

  @font-face {
    font-family: "Poppins";
    src: url("/fonts/Poppins-Italic.ttf");
    font-weight: normal;
    font-style: italic;
  }

  @font-face {
    font-family: "Poppins";
    src: url("/fonts/Poppins-Regular.ttf");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Poppins";
    src: url("/fonts/Poppins-LightItalic.ttf");
    font-weight: 200;
    font-style: italic;
  }

  @font-face {
    font-family: "Poppins";
    src: url("/fonts/Poppins-BoldItalic.ttf");
    font-weight: bold;
    font-style: italic;
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    text-decoration: none;
  }
  button {
    border: none;
    background-color: transparent;
  }

  body {
    position: relative;
    font-family: "Poppins";
    padding: 0;
    margin: 0;
    overflow-x: hidden;
    width: 100vw;
  }

  section {
    max-width: 100vw;
    overflow-x: clip;
  }

  h1 {
    font-size: 4rem;
    font-family: Poppins;
    font-weight: 300;
    line-height: 1.125em;
    width: 40rem;
    margin: 0;
    color: #ffffff80;
    background: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.1),
        rgba(255, 255, 255, 0.1) 25%,
        white 50%,
        rgba(255, 255, 255, 0.1) 75%,
        rgba(255, 255, 255, 0.1)
      )
      text;
    text-align: center;
    strong {
      font-weight: 900;
    }
    em {
      font-weight: 200;
    }
    .boldIt {
      font-weight: bold;
      font-style: italic;
    }
  }

  a {
    cursor: pointer;
  }

  @media screen and (max-width: 600px) {
    h1 {
      font-size: 3rem;
      color: white;
      max-width: 80%;
      z-index: 10;
      text-shadow:
        0px 0px 20px #000000aa,
        0px 0px 0.2em #000000aa;
    }
  }
</style>
